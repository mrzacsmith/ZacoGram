
<!DOCTYPE html>
<html>
<head>
  <title>ZacoGram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-default">
       <div class="container">
          <div class="navbar-header">
              <%= link_to "Zacogram", root_path, class: "navbar-brand" %>
          </div>
           <div class="navbar-nav nav">
               <ul class="navbar-nav nav">
				<li><%= link_to "Sign Up", new_user_registration_path %></li>
				<% if user_signed_in? %>
                   <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to leave?"} %></li>
				<% else %>	
					<li><%= link_to "Login", new_user_session_path %></li>
				<% end %>
				<li><% if user_signed_in? %>
				<p><%= link_to "New Post", new_post_path, class: "navbar-text navbar-link navbar-right" %></p>
			<% end %></li>
			</ul>
			
           </div>
       </div>
    </nav>
    <div class="flash_message">
        <% flash.each do |a, b| %> 
        <div class="alert alert-success"> <%= b %> </div>
        <% end %>
    </div>
<%= yield %>

</body>
</html>
